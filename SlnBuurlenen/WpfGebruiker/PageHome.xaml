<Page x:Class="WpfGebruiker.PageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGebruiker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageHome">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="350"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="20" VerticalAlignment="Top">
            <Label  Content="Type: " HorizontalAlignment="Center"/>
            <RadioButton x:Name="GemotoriseerdRadioButton" Content="Gemotoriseerd" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <RadioButton x:Name="GetrokkenRadioButton" Content="Getrokken" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
        </StackPanel>
        <ListBox Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBoxItem Content="List" Margin="20"/>
            <ListBoxItem Content="List" Margin="20"/>
            <ListBoxItem Content="List" Margin="20"/>
        </ListBox>
    </Grid>
</Page>
