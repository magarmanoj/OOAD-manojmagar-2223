<Window x:Class="WpfGebruiker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGebruiker"
        mc:Ignorable="d"
        Title="WPF Buurlenen" Height="500" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="Main" Grid.Column="2" NavigationUIVisibility="Hidden" Source="PageHome.xaml"/>
        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10,100,10,0" VerticalAlignment="Top">
            <Button x:Name="HomeButton" Content="Home" Click="BtnHome_Click" Margin="0,0,0,10"/>
            <Button x:Name="OntleningenButton" Content="Ontleningen" Click="BtnOntleningen_Click" Margin="0,0,0,10"/>
            <Button x:Name="VoertuigenButton" Content="Voertuigen" Click="BtnVoertuigen_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
