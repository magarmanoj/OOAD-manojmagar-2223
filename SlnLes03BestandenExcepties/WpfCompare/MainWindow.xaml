<Window x:Class="WpfCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCompare"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lb1" HorizontalAlignment="Left" Height="120" Margin="75,45,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="Items_SelectionChanged" />
        <ListBox x:Name="lb2" HorizontalAlignment="Left" Height="120" Margin="491,45,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="Items_SelectionChanged" />
        <Button x:Name="btnCompare" Content="Compare!" HorizontalAlignment="Left" Height="32" Margin="345,365,0,0" VerticalAlignment="Top" Width="125" Click="BtnCompare_Click"/>
        <ListBox x:Name="lbMsg1" HorizontalAlignment="Left" Height="185" Margin="25,215,0,0" VerticalAlignment="Top" Width="300" />
        <ListBox x:Name="lbMsg2" HorizontalAlignment="Left" Height="185" Margin="490,215,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
